    <script>
        // Дані для гістограми
        const barCtx = document.getElementById('barChart').getContext('2d');
        new Chart(barCtx, {
            type: 'bar',
            data: {
                labels: ['Жінкам', 'Чоловікам', 'Дітям', 'Аксесуари'],
                datasets: [{
                    label: 'Кількість продажів',
                    data: [120, 90, 60, 30],
                    backgroundColor: ['#ff6f91', '#6a67ce', '#fddb3a', '#8fd694']
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });

        // Дані для кругової діаграми
        const pieCtx = document.getElementById('pieChart').getContext('2d');
        new Chart(pieCtx, {
            type: 'pie',
            data: {
                labels: ['Жінки', 'Чоловіки', 'Діти', 'Аксесуари'],
                datasets: [{
                    label: 'Тип товарів',
                    data: [40, 30, 20, 10],
                    backgroundColor: ['#ff9aa2', '#9ec1cf', '#b5ead7', '#f3d1dc']
                }]
            },
            options: {
                responsive: true
            }
        });
    </script>
